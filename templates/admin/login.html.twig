{% extends 'baseAdmin.html.twig' %}

{% block body %}
{% if not app.user %}
    <h1>Connectez-vous</h1>

    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <input placeholder="Adresse email" required name="_username" type="text">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" required name="_password" type="password"><br>
            <a href="forgotten_password">Mot de passe oubli√© ?</a>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
        </div>
    </form>
{% else %}
    <h2>Bienvenue {{ app.user.username }}</h2>
{% endif %}

{% endblock %}